<UserControl
    x:Class="ChamCong365.ucOrganizationalchart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:ChamCong365.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:load="clr-namespace:ChamCong365.Popup.DeXuat.LoadingSpinner"
    xmlns:local="clr-namespace:ChamCong365"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Height="1015"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <core:MathConvert x:Key="math" />
    </UserControl.Resources>

    <Grid Margin="0,43,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*" />
            <ColumnDefinition Width="417*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2" Margin="0,30,0,0">
            <!--  star add new poup  -->
            <Border
                Width="135"
                Height="43"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#42D778"
                CornerRadius="10">

                <Grid
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Cursor="Hand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="0,0,9,0" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        Cursor="Hand"
                        FontSize="16"
                        FontWeight="DemiBold"
                        Foreground="{StaticResource #FFFFFF}"
                        MouseLeftButtonDown="ShowPopupOption"
                        Text="+ Thêm mới" />
                    <Grid />
                </Grid>
            </Border>
            <Grid
                x:Name="popupOption"
                Width="232"
                Margin="10,50,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Visibility="Collapsed">
                <Rectangle Margin="-3000" Fill="Transparent" MouseUp="CloseOptionPopup_MouseUp" />
                <Border Background="{StaticResource #FFFFFF}" CornerRadius="4" />
                <Border
                    BorderBrush="{StaticResource #666666}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Opacity="0.47" />
                <Grid
                    Height="44"
                    VerticalAlignment="Top"
                    MouseEnter="Grid_MouseMove"
                    MouseLeave="Grid_MouseLeave"
                    MouseUp="NavigateToAddChildCom">
                    <Grid
                        Width="4"
                        Height="36"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{StaticResource #4C5BD4}"
                        Visibility="Collapsed" />
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="DemiBold"
                        Foreground="{StaticResource #474747}"
                        Text="Thêm mới công ty con" />
                    <Grid
                        Height="0.2"
                        Margin="8,0,0,0"
                        VerticalAlignment="Bottom"
                        Background="{StaticResource #474747}"
                        Opacity="0.48" />
                    <Grid Background="Transparent" Cursor="Hand" />
                </Grid>
                <Grid
                    Height="40"
                    Margin="0,44,0,0"
                    VerticalAlignment="Top"
                    MouseEnter="Grid_MouseMove"
                    MouseLeave="Grid_MouseLeave"
                    MouseUp="NavigateToAddDepartment">
                    <Grid
                        Width="4"
                        Height="36"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{StaticResource #4C5BD4}"
                        Visibility="Collapsed" />
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="DemiBold"
                        Foreground="{StaticResource #474747}"
                        Text="Thêm mới phòng ban" />
                    <Grid
                        Height="0.2"
                        Margin="8,0,0,0"
                        VerticalAlignment="Bottom"
                        Background="{StaticResource #474747}"
                        Opacity="0.48" />
                    <Grid Background="Transparent" Cursor="Hand" />
                </Grid>
                <Grid
                    Height="40"
                    Margin="0,88,0,0"
                    VerticalAlignment="Top"
                    MouseEnter="Grid_MouseMove"
                    MouseLeave="Grid_MouseLeave"
                    MouseUp="NavigateToAddTeam">
                    <Grid
                        Width="4"
                        Height="36"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{StaticResource #4C5BD4}"
                        Visibility="Collapsed" />
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="DemiBold"
                        Foreground="{StaticResource #474747}"
                        Text="Thêm mới tổ" />
                    <Grid
                        Height="0.2"
                        Margin="8,0,0,0"
                        VerticalAlignment="Bottom"
                        Background="{StaticResource #474747}"
                        Opacity="0.48" />
                    <Grid Background="Transparent" Cursor="Hand" />
                </Grid>
                <Grid
                    Height="40"
                    Margin="0,132,0,0"
                    VerticalAlignment="Top"
                    MouseEnter="Grid_MouseMove"
                    MouseLeave="Grid_MouseLeave"
                    MouseUp="NavigateToAddGroup">
                    <Grid
                        Width="4"
                        Height="36"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="{StaticResource #4C5BD4}"
                        Visibility="Collapsed" />
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="DemiBold"
                        Foreground="{StaticResource #474747}"
                        Text="Thêm mới nhóm" />
                    <Grid
                        Height="0.2"
                        Margin="8,0,0,0"
                        VerticalAlignment="Bottom"
                        Background="{StaticResource #474747}"
                        Opacity="0.48" />
                    <Grid Background="Transparent" Cursor="Hand" />
                </Grid>
            </Grid>



            <Grid Margin="0,100,0,0">
                <ScrollViewer
                    x:Name="scroll"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalScrollBarVisibility="Auto"
                    PreviewMouseWheel="icListChill_PreviewMouseWheel"
                    VerticalScrollBarVisibility="Hidden">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel
                            x:Name="borParentComInfo"
                            Grid.Row="0"
                            Height="Auto"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Visibility="Collapsed">
                            <Border
                                Width="auto"
                                Height="Auto"
                                MinHeight="186"
                                Padding="10"
                                Background="{StaticResource #4C5BD4}"
                                CornerRadius="8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition MinHeight="35" />
                                        <RowDefinition MinHeight="25" />
                                        <RowDefinition MinHeight="25" />
                                        <RowDefinition MinHeight="25" />
                                        <RowDefinition MinHeight="35" />

                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        x:Name="txbParentComName"
                                        Grid.Row="0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding companyName}" />
                                    <ItemsControl
                                        x:Name="icListChill"
                                        Grid.Row="1"
                                        PreviewMouseWheel="icListChill_PreviewMouseWheel">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid
                                                    Grid.Row="2"
                                                    MinHeight="25"
                                                    HorizontalAlignment="Center">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Right"
                                                        FontSize="16"
                                                        FontWeight="DemiBold"
                                                        Foreground="White"
                                                        Text="{Binding type}" />
                                                    <TextBlock
                                                        Grid.Column="1"
                                                        Margin="3,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        FontSize="16"
                                                        FontWeight="DemiBold"
                                                        Foreground="White"
                                                        Text="{Binding ep_name}" />
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <StackPanel Grid.Row="1">
                                        <Grid
                                            Grid.Row="1"
                                            Margin="0,5,0,0"
                                            HorizontalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                HorizontalAlignment="Right"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="Giám đốc:" />
                                            <TextBlock
                                                x:Name="txbParentComManager"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="{Binding parent_manager}" />
                                        </Grid>
                                        <Grid
                                            Grid.Row="1"
                                            Margin="0,5,0,10"
                                            HorizontalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                HorizontalAlignment="Right"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="Phó giám đốc:" />
                                            <TextBlock
                                                x:Name="txbParentDeputy"
                                                Grid.Column="1"
                                                HorizontalAlignment="Left"
                                                FontSize="18"
                                                Foreground="White"
                                                Text="{Binding parent_deputy}" />
                                        </Grid>
                                    </StackPanel>


                                    <Grid
                                        Grid.Row="2"
                                        MinWidth="130"
                                        HorizontalAlignment="Center"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="NavigateToPageEmp">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Margin="10"
                                            Source="{StaticResource iconNoteListWhiteDrawingImage}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="Tổng số nhân viên:" />
                                        <TextBlock
                                            x:Name="txbTotalEmployee"
                                            Grid.Column="2"
                                            Width="Auto"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="{Binding tong_nv}" />
                                        <Grid
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Width="Auto"
                                            Height="1"
                                            Margin="0,0,0,6"
                                            VerticalAlignment="Bottom"
                                            Background="White" />
                                    </Grid>
                                    <Grid
                                        Grid.Row="3"
                                        MinWidth="195"
                                        HorizontalAlignment="Center"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="NavigateToPageEmpTime">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Margin="10"
                                            Source="{StaticResource iconNoteListWhiteDrawingImage}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="Tổng nhân viên đã điểm danh:" />
                                        <TextBlock
                                            x:Name="txbTotalEmployeeTimeKeep"
                                            Grid.Column="2"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="{Binding tong_nv_da_diem_danh}" />
                                        <Grid
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Width="Auto"
                                            Height="1"
                                            Margin="0,0,0,6"
                                            VerticalAlignment="Bottom"
                                            Background="White" />
                                    </Grid>
                                    <Grid
                                        Grid.Row="4"
                                        MinWidth="203"
                                        HorizontalAlignment="Center"
                                        Background="Transparent"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="NavigateToPageEmpNoTime">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Image
                                            Grid.Column="0"
                                            Margin="10"
                                            Source="{StaticResource iconNoteListWhiteDrawingImage}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="Tổng nhân viên chưa điểm danh:" />
                                        <TextBlock
                                            x:Name="txbTotalEmployeeNoTimeKeep"
                                            Grid.Column="2"
                                            Margin="10,0,0,0"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Foreground="White"
                                            Text="{Binding TotalEmployeeNoTimeKeep}" />
                                        <Grid
                                            Grid.Column="1"
                                            Grid.ColumnSpan="2"
                                            Width="Auto"
                                            Height="1"
                                            Margin="0,0,0,6"
                                            VerticalAlignment="Bottom"
                                            Background="White" />
                                    </Grid>
                                </Grid>
                            </Border>
                            <Line
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center"
                                Stroke="#474747"
                                StrokeThickness="2"
                                X1="0"
                                Y1="25" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Margin="100,0,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <!--  Sơ đồ phòng ban  -->
                            <ItemsControl
                                x:Name="icItemListdep"
                                MouseEnter="icItemListDepartment_MouseEnter"
                                PreviewMouseWheel="icListChill_PreviewMouseWheel">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Name="grid" Height="Auto">
                                            <Line
                                                Width="Auto"
                                                Stroke="#474747"
                                                StrokeThickness="2">
                                                <Line.Style>
                                                    <Style TargetType="{x:Type Line}">
                                                        <Setter Property="X1" Value="0" />
                                                        <Setter Property="X2" Value="{Binding ElementName=grid, Path=ActualWidth}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding type}" Value="Head">
                                                                <Setter Property="X1" Value="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource math}, ConverterParameter=@VALUE/2-1.5}" />
                                                                <Setter Property="X2" Value="{Binding ElementName=grid, Path=ActualWidth}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding type}" Value="Tail">
                                                                <Setter Property="X1" Value="{Binding ElementName=grid, Path=ActualWidth}" />
                                                                <Setter Property="X2" Value="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource math}, ConverterParameter=@VALUE/2+1}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding typeTail}" Value="TailDep">
                                                                <Setter Property="X1" Value="0" />
                                                                <Setter Property="X2" Value="{Binding ElementName=grid, Path=ActualWidth, Converter={StaticResource math}, ConverterParameter=@VALUE/2+0.5}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Line.Style>
                                            </Line>
                                            <Line
                                                HorizontalAlignment="Center"
                                                Stroke="#474747"
                                                StrokeThickness="2"
                                                X1="0"
                                                Y1="25" />
                                            <Border
                                                Width="Auto"
                                                Height="Auto"
                                                MinWidth="400"
                                                MinHeight="186"
                                                Margin="25,0,0,0"
                                                Padding="10"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Top"
                                                Background="{StaticResource #FFFFFF}"
                                                BorderBrush="#4C5BD4"
                                                BorderThickness="1"
                                                CornerRadius="8">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition MinHeight="35" />
                                                        <RowDefinition />
                                                        <RowDefinition MinHeight="25" />
                                                        <RowDefinition MinHeight="25" />
                                                        <RowDefinition MinHeight="25" />
                                                        <RowDefinition MinHeight="25" />
                                                        <RowDefinition MinHeight="25" />
                                                        <RowDefinition MinHeight="25" />
                                                    </Grid.RowDefinitions>
                                                    <Grid
                                                        Grid.Row="0"
                                                        Margin="10,0,10,0"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            FontSize="18"
                                                            FontWeight="Bold"
                                                            Foreground="#474747"
                                                            Text="{Binding dep_name}" />
                                                        <Grid Grid.Column="1">
                                                            <Path
                                                                Margin="5,0,0,0"
                                                                Data="{StaticResource icon_edit}"
                                                                Fill="{StaticResource #4C5BD4}" />
                                                            <Grid
                                                                Background="Transparent"
                                                                Cursor="Hand"
                                                                MouseLeftButtonDown="ShowUpdateDep" />
                                                        </Grid>
                                                    </Grid>

                                                    <Rectangle
                                                        Grid.Row="1"
                                                        Height="1"
                                                        Margin="10,0,10,0"
                                                        VerticalAlignment="Bottom"
                                                        Stroke="{StaticResource #CCCCCC}"
                                                        StrokeDashArray="2,4" />
                                                    <Grid
                                                        Grid.Row="2"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Mô tả:" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding description}" />
                                                        <TextBlock
                                                            Grid.Column="2"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Right"
                                                            Cursor="Hand"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="{StaticResource #4C5BD4}"
                                                            MouseUp="ShowDetailDep"
                                                            Text="(Chi tiết)" />
                                                    </Grid>
                                                    <Grid
                                                        x:Name="PopupShow"
                                                        Grid.Row="3"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Trưởng phòng:" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding manager}" />

                                                    </Grid>
                                                    <Grid
                                                        Grid.Row="4"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        Background="Transparent"
                                                        Cursor="Hand">

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Phó phòng:" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding deputy}" />
                                                    </Grid>
                                                    <Grid
                                                        Grid.Row="5"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        Background="Transparent"
                                                        Cursor="Hand"
                                                        MouseLeftButtonDown="NavigateToDepAll">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Số nhân viên:" />
                                                        <TextBlock
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding total_emp}" />
                                                        <Grid
                                                            Grid.Column="0"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                        <Grid
                                                            Grid.Column="1"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                    </Grid>
                                                    <Grid
                                                        Grid.Row="6"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        Background="Transparent"
                                                        Cursor="Hand"
                                                        MouseLeftButtonDown="NavigateToDepTimeKeep">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Số nhân viên đã điểm danh:" />
                                                        <TextBlock
                                                            x:Name="txtSumTimeKeep"
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding tong_nv_da_diem_danh}" />
                                                        <Grid
                                                            Grid.Column="0"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                        <Grid
                                                            Grid.Column="1"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                    </Grid>
                                                    <Grid
                                                        Grid.Row="7"
                                                        Margin="0,5,0,0"
                                                        HorizontalAlignment="Center"
                                                        Background="Transparent"
                                                        Cursor="Hand"
                                                        MouseLeftButtonDown="NavigateToDepNoTimeKeep">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock
                                                            Grid.Column="0"
                                                            HorizontalAlignment="Right"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="Số nhân viên chưa điểm danh:" />
                                                        <TextBlock
                                                            x:Name="txtSumNoTimeKeep"
                                                            Grid.Column="1"
                                                            Margin="3,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            FontSize="16"
                                                            FontWeight="DemiBold"
                                                            Foreground="#474747"
                                                            Text="{Binding TotalEmployeeNoTimeKeep}" />
                                                        <Grid
                                                            Grid.Column="0"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                        <Grid
                                                            Grid.Column="1"
                                                            Width="Auto"
                                                            Height="1"
                                                            VerticalAlignment="Bottom"
                                                            Background="#78756c" />
                                                    </Grid>
                                                </Grid>
                                            </Border>
