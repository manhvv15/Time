    <Style x:Key="MenuItemCalendarWork" TargetType="MenuItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Grid Background="Transparent" >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Cursor="Hand" Background="Transparent" Grid.Row="0" Width="25" Height="5">
