<UserControl
    x:Class="ChamCong365.ucCandidatesList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Popup="clr-namespace:ChamCong365.Popup.funcCompanyManager.DatePicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChamCong365"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1200"
    d:DesignWidth="2000"
    mc:Ignorable="d">
    <Grid>
        <Border
            Background="White"
            BorderBrush="#FFFFFF"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="8"
                    Opacity="0.5"
                    ShadowDepth="0.2" />
            </Border.Effect>
            <Grid>

                <ScrollViewer x:Name="scroll" VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20,0,20,0">
                        <!--
                            Tiêu
                            đề
                        -->
                        <Border Height="47">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="DemiBold"
                                Style="{StaticResource TextBlockLable}"
                                Text="Danh sách ứng viên" />
                        </Border>
                        <!--
                            Các
                            button xuất excel và thêm
                        -->
                        <WrapPanel
                            Margin="0,20,0,20"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                            <Border
                                x:Name="bodAddCandidate"
                                Width="188"
                                Height="44"
                                Margin="0,0,20,0"
                                HorizontalAlignment="Right"
                                Background="#42D778"
                                CornerRadius="5 5 5 5"
                                MouseUp="bodAddCandidate_MouseUp"
                                TextBlock.FontSize="16"
                                TextBlock.FontWeight="DemiBold"
                                TextBlock.Foreground="White"
                                TextBlock.LineHeight="21.76"
                                Visibility="Visible">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text=" Thêm ứng viên +" />
                            </Border>
                            <Border
                                x:Name="bodCreateStage"
                                Width="188"
                                Height="44"
                                Margin="0,0,20,0"
                                HorizontalAlignment="Right"
                                Background="#42D778"
                                CornerRadius="5 5 5 5"
                                MouseUp="bodCreateStage_MouseUp"
                                TextBlock.FontSize="16"
                                TextBlock.FontWeight="DemiBold"
                                TextBlock.Foreground="White"
                                TextBlock.LineHeight="21.76"
                                Visibility="Visible">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text=" Thêm gian đoạn +" />
                            </Border>
                            <Border
                                Width="188"
                                Height="44"
                                Margin="0,0,20,0"
                                HorizontalAlignment="Right"
                                BorderBrush="#20744A"
                                BorderThickness="1"
                                CornerRadius="5 5 5 5"
                                TextBlock.FontSize="16"
                                TextBlock.FontWeight="DemiBold"
                                TextBlock.Foreground="White"
                                TextBlock.LineHeight="21.76"
                                Visibility="Visible">
                                <DockPanel HorizontalAlignment="Center">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="#20744A"
                                        Text="Xuất file excel" />
                                    <Image
                                        Width="24"
                                        Height="24"
                                        Margin="10,0,0,0"
                                        Source="{StaticResource iconExcelDrawingImage}" />
                                </DockPanel>
                            </Border>

                        </WrapPanel>
                        <!--
                            Các
                            select box
                        -->
                        <WrapPanel Margin="-20,0,0,0">
                            <!--
                                Chọn
                                Công ty
                            -->
                            <!--
                                Chọn
                                Phòng ban
                            -->
                            <Popup:DatePicker
                                x:Name="dp1"
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Background="{StaticResource #FFFFFF}"
                                BorderBrush="#474747"
                                BorderThickness="0.5"
                                CornerRadius="4"
                                FontSize="16" />

                            <Popup:DatePicker
                                x:Name="dp2"
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Background="{StaticResource #FFFFFF}"
                                BorderBrush="#474747"
                                BorderThickness="0.5"
                                CornerRadius="4"
                                FontSize="16" />
                            <Grid
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20">
                                <Border
                                    Background="{StaticResource #FFFFFF}"
                                    BorderBrush="{StaticResource #474747}"
                                    BorderThickness="1"
                                    CornerRadius="4" />
                                <TextBox
                                    x:Name="tbName"
                                    Padding="15,0,0,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Some hint text"
                                    materialDesign:HintAssist.IsFloating="False"
                                    Background="{x:Null}"
                                    BorderBrush="{x:Null}"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Foreground="{StaticResource #666666}"
                                    KeyUp="tbName_KeyUp"
                                    SelectionBrush="{x:Null}" />
                            </Grid>


                            <Border
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Style="{StaticResource BorderSelected}">
                                <ComboBox
                                    x:Name="cbxRecruitment"
                                    Width="275"
                                    Padding="10,0,10,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Vị trí tuyển dụng"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    DisplayMemberPath="Value"
                                    FontSize="12"
                                    Foreground="#FF474747"
                                    IsEditable="True"
                                    IsTextSearchEnabled="False"
                                    KeyUp="cbxRecruitment_KeyUp"
                                    PreviewTextInput="cbxRecruitment_PreviewTextInput"
                                    SelectedValuePath="Key"
                                    Style="{StaticResource Combobox1}" />

                            </Border>

                            <Border
                                x:Name="bodDrpDownSelectStaff"
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Style="{StaticResource BorderSelected}">
                                <ComboBox
                                    x:Name="cbxUserHiring"
                                    MinWidth="100"
                                    Padding="10,0,10,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Nhân viên tuyển dụng"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    DisplayMemberPath="Value"
                                    Foreground="{StaticResource #474747}"
                                    IsEditable="True"
                                    IsTextSearchEnabled="False"
                                    KeyUp="cbxUserHiring_KeyUp"
                                    PreviewTextInput="cbxUserHiring_PreviewTextInput"
                                    SelectedValuePath="Key"
                                    Style="{StaticResource Combobox1}" />
                            </Border>

                            <Border
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Style="{StaticResource BorderSelected}">
                                <ComboBox
                                    x:Name="cbxGender"
                                    Padding="10,0,0,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Giới tính"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    DisplayMemberPath="Name"
                                    SelectedValuePath="ID"
                                    Style="{StaticResource Combobox1}" />
                            </Border>
                            <Border
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                Style="{StaticResource BorderSelected}">
                                <ComboBox
                                    x:Name="cbxStatus"
                                    Padding="10,0,0,0"
                                    VerticalAlignment="Center"
                                    materialDesign:HintAssist.Hint="Trạng thái"
                                    Background="Transparent"
                                    BorderBrush="{x:Null}"
                                    DisplayMemberPath="Name"
                                    Foreground="#FF474747"
                                    SelectedValuePath="ID"
                                    Style="{StaticResource Combobox1}" />
                            </Border>

                            <Border
                                Width="275"
                                Height="44"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Right"
                                Background="#4C5BD4"
                                CornerRadius="5 5 5 5"
                                Cursor="Hand"
                                MouseUp="btnSearch_MouseUp"
                                TextBlock.FontSize="16"
                                TextBlock.FontWeight="DemiBold"
                                TextBlock.Foreground="White"
                                TextBlock.LineHeight="21.76"
                                Visibility="Visible">
                                <DockPanel HorizontalAlignment="Center">
                                    <Image
                                        Width="24"
                                        Height="24"
                                        Source="{StaticResource iconSearchWhiteDrawingImage}" />

                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text=" Tìm kiếm" />
                                </DockPanel>
                            </Border>
                        </WrapPanel>
                        <!--
                            Table
                            list ứng viên
                        -->
                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                            <Grid
                                x:Name="gridContent"
                                Height="500"
                                Margin="0,25,0,5">
                                <Border
                                    BorderBrush="{StaticResource #666666}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <ScrollViewer
                                        Name="scroll1"
                                        HorizontalScrollBarVisibility="Auto"
                                        PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                                        VerticalScrollBarVisibility="Disabled">
                                        <Grid>
                                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                <!--  giai đoạn nhận hồ sơ ứng viên  -->
                                                <Grid Width="250">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="100" />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid Grid.Row="0" Margin="1">
                                                        <Border
                                                            Background="#FFEDDA"
                                                            BorderThickness="0"
                                                            CornerRadius="8,0,0,0" />
                                                        <TextBlock
                                                            Margin="0,10,0,0"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Top"
                                                            FontSize="15"
                                                            FontWeight="SemiBold"
                                                            Foreground="{StaticResource #474747}"
                                                            Text="Nhận hồ sơ ứng viên" />
                                                        <TextBlock
                                                            x:Name="tbtotalCandidate"
                                                            Margin="0,0,0,5"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Bottom"
                                                            FontSize="15"
                                                            FontWeight="SemiBold"
                                                            Foreground="{StaticResource #474747}"
                                                            Text="" />
                                                    </Grid>
                                                    <Grid Grid.Row="1">
                                                        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Hidden">
                                                            <StackPanel>
                                                                <ItemsControl x:Name="icListCandidate">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Grid Height="165" Margin="5">
                                                                                <Border
                                                                                    Background="#F1F9FC"
                                                                                    BorderBrush="#CCCCCC"
                                                                                    BorderThickness="0.5"
                                                                                    CornerRadius="4" />
                                                                                <Grid
                                                                                    Width="50"
                                                                                    Height="50"
                                                                                    Margin="5,10,0,0"
                                                                                    HorizontalAlignment="Left"
                                                                                    VerticalAlignment="Top">
                                                                                    <Border
                                                                                        BorderBrush="{StaticResource #CCCCCC}"
                                                                                        BorderThickness="1"
                                                                                        CornerRadius="90" />
                                                                                    <Ellipse Width="50" Height="50">
                                                                                        <Ellipse.Fill>
                                                                                            <ImageBrush ImageSource="https://phanmemnhansu.timviec365.vn/assets/images/t_images/logo_com.png" Stretch="UniformToFill" />
                                                                                        </Ellipse.Fill>
                                                                                    </Ellipse>
                                                                                </Grid>
                                                                                <StackPanel>
                                                                                    <TextBlock
                                                                                        Margin="66,10,0,0"
                                                                                        HorizontalAlignment="Left"
                                                                                        VerticalAlignment="Top"
                                                                                        Cursor="Hand"
                                                                                        FontSize="14"
                                                                                        FontWeight="Bold"
                                                                                        Foreground="{StaticResource #474747}"
                                                                                        MouseLeftButtonDown="NavigateToCandidateDetail"
                                                                                        Text="{Binding name}"
                                                                                        TextWrapping="Wrap" />
                                                                                    <Grid
                                                                                        Margin="66,5,0,0"
                                                                                        HorizontalAlignment="Left"
                                                                                        VerticalAlignment="Top">
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="Auto" />
                                                                                            <ColumnDefinition Width="Auto" />
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <TextBlock
                                                                                            Grid.Column="0"
                                                                                            FontFamily="Roboto"
                                                                                            FontSize="14"
                                                                                            FontWeight="Bold"
                                                                                            Foreground="{StaticResource #474747}"
                                                                                            Text="SĐT: " />
                                                                                        <TextBlock
                                                                                            Grid.Column="1"
                                                                                            FontFamily="Roboto"
                                                                                            FontSize="14"
                                                                                            FontWeight="Bold"
                                                                                            Foreground="{StaticResource #474747}"
                                                                                            Text="{Binding phone}" />
                                                                                    </Grid>
                                                                                    <TextBlock
                                                                                        Margin="66,5,5,0"
                                                                                        HorizontalAlignment="Left"
                                                                                        VerticalAlignment="Top"
                                                                                        FontFamily="Roboto"
                                                                                        FontSize="14"
                                                                                        FontWeight="Bold"
                                                                                        Foreground="{StaticResource #474747}"
                                                                                        Text="{Binding title}"
                                                                                        TextWrapping="Wrap" />
                                                                                    <Grid
                                                                                        Width="82"
                                                                                        Margin="66,5,0,0"
                                                                                        HorizontalAlignment="Left"
                                                                                        VerticalAlignment="Top">
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition />
                                                                                            <ColumnDefinition />
                                                                                            <ColumnDefinition />
                                                                                            <ColumnDefinition />
                                                                                            <ColumnDefinition />
                                                                                        </Grid.ColumnDefinitions>
                                                                                        <Path
                                                                                            Grid.Column="0"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Stroke="#FDBE1E" />
                                                                                        <Path
                                                                                            Grid.Column="1"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Stroke=" #FDBE1E" />
                                                                                        <Path
                                                                                            Grid.Column="2"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Stroke="#FDBE1E" />
                                                                                        <Path
                                                                                            Grid.Column="3"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Stroke="#FDBE1E" />
                                                                                        <Path
                                                                                            Grid.Column="4"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Stroke="#FDBE1E" />
                                                                                        <Path
                                                                                            Grid.Column="0"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Fill="#FDBE1E"
                                                                                            Stroke="#FDBE1E">
                                                                                            <Path.Style>
                                                                                                <Style TargetType="Path">
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding star1}" Value="true">
                                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger Binding="{Binding star1}" Value="false">
                                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Path.Style>
                                                                                        </Path>
                                                                                        <Path
                                                                                            Grid.Column="1"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Fill=" #FDBE1E"
                                                                                            Stroke="#FDBE1E">
                                                                                            <Path.Style>
                                                                                                <Style TargetType="Path">
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding star2}" Value="true">
                                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger Binding="{Binding star2}" Value="false">
                                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Path.Style>
                                                                                        </Path>
                                                                                        <Path
                                                                                            Grid.Column="2"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Fill=" #FDBE1E"
                                                                                            Stroke=" #FDBE1E">
                                                                                            <Path.Style>
                                                                                                <Style TargetType="Path">
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding star3}" Value="true">
                                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger Binding="{Binding star3}" Value="false">
                                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Path.Style>
                                                                                        </Path>
                                                                                        <Path
                                                                                            Grid.Column="3"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Fill=" #FDBE1E"
                                                                                            Stroke="#FDBE1E">
                                                                                            <Path.Style>
                                                                                                <Style TargetType="Path">
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding star4}" Value="true">
                                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger Binding="{Binding star4}" Value="false">
                                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Path.Style>
                                                                                        </Path>
                                                                                        <Path
                                                                                            Grid.Column="4"
                                                                                            Data="{StaticResource icon_star}"
                                                                                            Fill="#FDBE1E"
                                                                                            Stroke="#FDBE1E">
                                                                                            <Path.Style>
                                                                                                <Style TargetType="Path">
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding star5}" Value="true">
                                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                                        </DataTrigger>
                                                                                                        <DataTrigger Binding="{Binding star5}" Value="false">
                                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Path.Style>
                                                                                        </Path>
                                                                                    </Grid>
                                                                                </StackPanel>
                                                                                <Grid
                                                                                    Width="18"
                                                                                    Height="4"
                                                                                    Margin="0,15,8,0"
                                                                                    HorizontalAlignment="Right"
                                                                                    VerticalAlignment="Top">
                                                                                    <Ellipse
                                                                                        Width="4"
                                                                                        Height="4"
                                                                                        HorizontalAlignment="Left"
                                                                                        VerticalAlignment="Center"
                                                                                        Fill="{StaticResource #474747}"
                                                                                        Opacity="0.75" />
                                                                                    <Ellipse
                                                                                        Width="4"
                                                                                        Height="4"
                                                                                        HorizontalAlignment="Center"
                                                                                        VerticalAlignment="Center"
                                                                                        Fill="{StaticResource #474747}"
                                                                                        Opacity="0.75" />
                                                                                    <Ellipse
                                                                                        Width="4"
                                                                                        Height="4"
                                                                                        HorizontalAlignment="Right"
                                                                                        VerticalAlignment="Center"
                                                                                        Fill="{StaticResource #474747}"
                                                                                        Opacity="0.75" />
                                                                                    <Border
                                                                                        Background="Transparent"
                                                                                        Cursor="Hand"
                                                                                        MouseLeftButtonDown="Border_MouseLeftButtonDown" />
                                                                                </Grid>
                                                                                <Line
                                                                                    Margin="0,30,0,0"
                                                                                    Stroke="#CCCCCC"
                                                                                    StrokeDashArray="2,4"
                                                                                    StrokeThickness="1"
                                                                                    X1="5"
                                                                                    X2="225"
                                                                                    Y1="87"
                                                                                    Y2="87" />
                                                                                <Grid
                                                                                    Margin="0,10,0,10"
                                                                                    HorizontalAlignment="Center"
                                                                                    VerticalAlignment="Bottom">
                                                                                    <Grid.RowDefinitions>
                                                                                        <RowDefinition />
                                                                                        <RowDefinition />
                                                                                    </Grid.RowDefinitions>
                                                                                    <TextBlock
                                                                                        Grid.Row="0"
                                                                                        FontSize="12"
                                                                                        FontWeight="Bold"
                                                                                        Foreground="{StaticResource #474747}"
                                                                                        Text="Nhân viên thực hiện: " />
                                                                                    <TextBlock
                                                                                        Grid.Row="1"
                                                                                        HorizontalAlignment="Center"
                                                                                        FontSize="12"
                                                                                        FontWeight="Bold"
                                                                                        Foreground="{StaticResource #474747}"
                                                                                        Text="{Binding hrName}"
                                                                                        TextWrapping="Wrap" />
                                                                                </Grid>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>
                                                            </StackPanel>
                                                        </ScrollViewer>
                                                    </Grid>
                                                    <Grid
                                                        Grid.RowSpan="2"
                                                        Width="0.5"
                                                        HorizontalAlignment="Right"
                                                        Background="{StaticResource #CCCCCC}" />
                                                </Grid>
                                                <ItemsControl x:Name="icListProcess">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Width="250">
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="100" />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <Grid
                                                                    Grid.Row="0"
                                                                    Margin="1"
                                                                    Background="#FFEDDA">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto" />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>
                                                                    <Grid Grid.Column="0" Width="235">
                                                                        <TextBlock
                                                                            Margin="0,10,0,0"
                                                                            HorizontalAlignment="Center"
                                                                            VerticalAlignment="Top"
                                                                            FontSize="15"
                                                                            FontWeight="SemiBold"
                                                                            Foreground="{StaticResource #474747}"
                                                                            Text="{Binding name}"
                                                                            TextWrapping="Wrap" />
                                                                    </Grid>
                                                                    <TextBlock
                                                                        Margin="0,40,0,0"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Bottom"
                                                                        FontSize="15"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="{StaticResource #474747}">
                                                                        (<Run Foreground="#4C5BD4" Text="{Binding totalCandidate}" />
                                                                        Ứng viên)</TextBlock>
                                                                    <Grid
                                                                        Grid.Row="1"
                                                                        Margin="0,10,0,10"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Top">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                            <ColumnDefinition Width="Auto" />
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock
                                                                            Grid.Column="0"
                                                                            Margin="0,0,2,0"
                                                                            Cursor="Hand"
                                                                            FontSize="13"
                                                                            FontWeight="Bold"
                                                                            Foreground="{StaticResource #4C5BD4}"
                                                                            MouseLeftButtonDown="ShowPopupEditProcess"
                                                                            Text="Chỉnh sửa">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding ElementName=page, Path=DataContext.PerEdit}" Value="true">
                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding ElementName=page, Path=DataContext.PerEdit}" Value="false">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                        <TextBlock
                                                                            Grid.Column="1"
                                                                            Margin="0,0,2,0"
                                                                            FontSize="13"
                                                                            FontWeight="Bold"
                                                                            Foreground="{StaticResource #474747}"
                                                                            Text="/">
                                                                            <TextBlock.Style>
                                                                                <Style TargetType="TextBlock">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding ElementName=page, Path=DataContext.PerDel}" Value="true">
                                                                                            <Setter Property="Visibility" Value="Visible" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding ElementName=page, Path=DataContext.PerDel}" Value="false">
                                                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </TextBlock.Style>
                                                                        </TextBlock>
                                                                        <TextBlock
                                                                            Grid.Column="2"
