                                    </Border>
                                </StackPanel>
                            </DockPanel>
                            <DockPanel>
                                <StackPanel Margin="0,7,0,0">
                                    <TextBlock  HorizontalAlignment="Left" FontWeight="Regular" Style="{DynamicResource TextBlockCalenda}">
                                            <Run Text="Tinh trang hôn nhân"/>
                                            <Run Foreground="#FF5B4D" Text="*"/>
                                    </TextBlock>
                                    <ComboBox x:Name="cboHonNhan" Style="{DynamicResource Combobox1}" Width="390" FontSize="16" BorderThickness="1" BorderBrush="#aaa" Margin="0,5,0,0" Foreground="#474747">
