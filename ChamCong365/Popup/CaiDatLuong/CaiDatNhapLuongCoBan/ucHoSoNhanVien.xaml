                                        <Run x:Name="txbNganHangNhanLuong"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textNganHangNhanLuong" Text="Chưa cập nhật" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                        
                                    </TextBlock>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                        <Run Text="Số tài khoản ngân hàng: "/>
                                        <Run x:Name="txbSoTaiKhoanNhanLuong"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textSoTKNganHang" Text="Chưa cập nhật" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                        
                                    </TextBlock>
                                </DockPanel>
                            </StackPanel>
                            <StackPanel Grid.Column="1" TextBlock.LineHeight="22">
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    <Run Text="Giới tính: "/>
                                    <Run x:Name="txbGioiTinh"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textGioiTinh" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    
                                    </TextBlock>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    <Run Text="Mã nhân viên: "/>
                                    <Run x:Name="txbMaNhanVien"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textMaNhanVien" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    
