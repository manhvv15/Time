                                        <Run x:Name="txbSDT"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textSDT" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                        
                                    </TextBlock>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
