                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    <Run Text="Chức vụ: "/>
                                    <Run x:Name="txbChucVu"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textChucVu" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    
                                    </TextBlock>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    <Run Text="Ngày bắt đầu làm: "/>
                                    <Run x:Name="txbNgayBatDauLam"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textNgayBatDauLam" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    
                                    </TextBlock>
                                </DockPanel>
                                <DockPanel Margin="0,5,0,0">
                                    <TextBlock FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    <Run Text="Email: "/>
                                    <Run x:Name="txbHienThiEmail"/>
                                    </TextBlock>
                                    <TextBlock x:Name="textEmail" FontSize="16" FontWeight="Regular" Foreground="#474747">
                                    
