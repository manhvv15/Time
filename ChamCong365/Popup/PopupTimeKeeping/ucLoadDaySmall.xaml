<UserControl x:Class="ChamCong365.Popup.PopupTimeKeeping.ucLoadDaySmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChamCong365.Popup.PopupTimeKeeping"
             mc:Ignorable="d">
    <Grid Width="34" Height="40">
        <Border x:Name="bodLoadDaySmall" 
                MouseLeftButtonUp="bodLoadDaySmall_MouseLeftButtonUp"
                MouseEnter="bodLoadDaySmall_MouseEnter" 
                MouseLeave="bodLoadDaySmall_MouseLeave">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="txbDays"/>
        </Border> 
    </Grid>
</UserControl>
