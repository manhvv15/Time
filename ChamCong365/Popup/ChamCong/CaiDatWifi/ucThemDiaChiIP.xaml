<UserControl x:Class="ChamCong365.Popups.ChamCong.CaiDatWifi.ucThemDiaChiIP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChamCong365.Popups.ChamCong.CaiDatWifi"
             mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0">
    <Grid>
        <Rectangle Fill="#000000" Opacity="0.5" MouseDown="Rectangle_MouseDown_1"/>
        <!--4. Create IP-->
        <Border 
            x:Name="bodCreateIP"
            Width="600"
            Height="340"
            Background="White"
            CornerRadius="10"
            BorderBrush="#474747">
            <StackPanel>
                <Grid>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <Border 
                        Grid.Row="0"
                        CornerRadius="10 10 0 0"
                        Width="600" Height="54"
                        Background="#4C5BD4"
                        TextBlock.FontSize="20"
                        TextBlock.LineHeight="23.44"
                        TextBlock.FontWeight="DemiBold"
                        TextBlock.Foreground="White">
                        <TextBlock 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="Thêm địa chỉ IP mới">
                        </TextBlock>
                    </Border>
                    <Border 
                        x:Name="ExitCreateWifi"
                        MouseUp="ExitCreateWifi_MouseUp"
                        Margin="0,15,15,21"
                        HorizontalAlignment="Right"
                        Width="19">
                        <Path Data="{DynamicResource iconExit}" StrokeThickness="2" Stroke="#FFFFFF"/>
                    </Border>
                </Grid>
                <StackPanel  Height="77" Margin="20">
                    <TextBlock  Margin="5" Foreground="#474747" FontSize="16" FontWeight="Regular" Height="21">
                        <Run Text="Tên IP Mạng"/>
                        <Run Foreground="#FF5B4D" Text=" *"/>
                    </TextBlock>
                    <!--<Border   
                        Width="557" Height="39"
                       Style="{DynamicResource BorderTextPopup}">
                        <TextBox 
                            VerticalContentAlignment="Center"
                            BorderThickness="0"
                            Foreground="#474747"
                            FontSize="16"
                            FontWeight="Normal"
                            Height="39"
                            MaxWidth="540" 
                            />
                    </Border>-->
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="#474747" Margin="0,5,0,0">
                        <Grid Height="37">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="37*"/>
                                <ColumnDefinition Width="312*"/>
                                <ColumnDefinition Width="0*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Background="Transparent" Height="40" VerticalAlignment="Center" x:Name="tb_TenIP" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="1,7,-3,-2" Padding="3,3,0,0" Grid.ColumnSpan="3"/>
                            <TextBlock FontSize="15" Foreground="{DynamicResource #666666}" TextWrapping="Wrap" Text="Nhập tên IP" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8,0,-10,11" Grid.ColumnSpan="3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=tb_TenIP, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    <TextBlock Height="22" x:Name="txtValidateNameIP" HorizontalAlignment="Left" FontSize="16" FontWeight="Regular" Foreground="#FF5B4D" />
                </StackPanel>
                <StackPanel Height="77" Margin="20 0 20 20">
                    <TextBlock Margin="5" Foreground="#474747" FontSize="16" FontWeight="Regular"  Height="22">
                        <Run Text="Địa chỉ IP mạng dùng điểm danh " />
                        <Run Foreground="#FF5B4D" Text="*"/>
                    </TextBlock>
                    <!--<Border 
                        Height="39"
                        Width="557" 
                        Style="{DynamicResource BorderTextPopup}">
                        <TextBox
                            Width="540"
                            Foreground="#474747"
                            FontSize="16"
                            FontWeight="Normal"
                            BorderThickness="0" 
                            VerticalContentAlignment="Center"/>
                    </Border>-->
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="#474747" Margin="0,5,0,0">
                        <Grid Height="37">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="37*"/>
                                <ColumnDefinition Width="312*"/>
                                <ColumnDefinition Width="0*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Background="Transparent" Height="40" VerticalAlignment="Center" x:Name="tb_DiaChiIP" FontSize="15" Foreground="{DynamicResource #474747}" BorderThickness="0" Margin="1,7,-3,-2" Padding="3,3,0,0" Grid.ColumnSpan="3"/>
                            <TextBlock FontSize="15" Foreground="{DynamicResource #666666}" TextWrapping="Wrap" Text="Nhập địa chỉ IP" IsHitTestVisible="False" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8,0,-10,11" Grid.ColumnSpan="3">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=tb_DiaChiIP, Path=Text}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    <TextBlock  Height="22" x:Name="txtValidateAddressIP" HorizontalAlignment="Left" FontSize="16" FontWeight="Regular" Foreground="#FF5B4D" />
                </StackPanel>
                <Border
                    x:Name="btnAddWifi"
                    MouseLeftButtonUp="btnAddWifi_MouseLeftButtonUp"
                    TextBlock.Foreground="#FFFFFF"
                    TextBlock.FontWeight="DemiBold"
                    CornerRadius="15"
                    TextBlock.FontSize="18"
                    Background="#4C5BD4"
                    Margin="0 0 0 20"
                    Height="44"
                    Width="142">
                    <TextBlock 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="Thêm mới">

                    </TextBlock>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
