<UserControl x:Class="ChamCong365.Popup.DatePicker.ucFirstDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChamCong365.Popup.DatePicker"
             mc:Ignorable="d">
    <Grid Margin="0 0 0 10" Width="78" Height="39">
        <Border Width="35" Height="35" 
                BorderThickness="0"
          Style="{DynamicResource BorderCalendar}">
            <TextBlock
                x:Name="txbFirstDay"
                Style="{DynamicResource TextBlockCalenda}"/>
        </Border>
    </Grid>
</UserControl>
