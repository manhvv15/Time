<UserControl
    x:Class="ChamCong365.Login.LoginCompany"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ChamCong365.Login"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1200"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="2">
                <Border.Background>
                    <ImageBrush ImageSource="/Resource/image/bgr_lon.png" />
                </Border.Background>
            </Border>

            <Grid Grid.Column="1">
                <StackPanel Background="White">
                    <Grid>
                        <Border
                            x:Name="bd_login"
                            VerticalAlignment="Stretch"
                            Background="White"
                            CornerRadius="0">
                            <StackPanel Margin="20">
                                <Border
                                    x:Name="bodBackto"
                                    Margin="10"
                                    HorizontalAlignment="Left"
                                    Cursor="Hand"
                                    MouseEnter="bodBackto_MouseEnter"
                                    MouseLeave="bodBackto_MouseLeave"
                                    MouseUp="bodBackto_MouseUp">
                                    <DockPanel Margin="0,3,0,-3">
                                        <Border
                                            Width="15"
                                            Height="9"
                                            Margin="0,0,10,0">
                                            <Path
                                                VerticalAlignment="Center"
                                                Data="{StaticResource iconRightArrow1}"
                                                Stroke="{StaticResource #4C5BD4}"
                                                StrokeThickness="1">
                                                <Path.LayoutTransform>
                                                    <RotateTransform Angle="180" />
                                                </Path.LayoutTransform>
                                            </Path>
                                        </Border>
                                        <Border>
                                            <TextBlock
                                                x:Name="txbBackToBack"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                Foreground="#4C5BD4"
                                                Text="Quay lại" />
                                        </Border>
                                    </DockPanel>
                                </Border>
                                <StackPanel
                                    x:Name="StLogin"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        Width="467"
                                        Margin="0,10,0,20"
                                        VerticalAlignment="Center"
                                        FontSize="26"
                                        FontWeight="Bold"
                                        Foreground="#4C5BD4"
                                        Text="Bứt Phá Thành Công Trong Tương Lai Cùng Hệ Thống Chuyển Đổi Số Top 1"
                                        TextAlignment="Center"
                                        TextWrapping="WrapWithOverflow"
                                        Visibility="Visible">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding WinLogin.SizeScreen}" Value="768">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <DockPanel Height="50" HorizontalAlignment="Center">
                                        <StackPanel>
                                            <Border
                                                Height="50"
                                                Background="Transparent"
                                                BorderBrush="#5A68D8"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="SelectedQRLogin">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="BorderThickness" Value="0,0,0,5" />
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock
                                                    x:Name="txbQRLoginTab"
                                                    Width="175"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="DemiBold"
                                                    Foreground="#5A68D8"
                                                    Text="QUÉT MÃ QR"
                                                    TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeLogin}" Value="1">
                                                                    <Setter Property="Foreground" Value="{DynamicResource #4C5BD4}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            <Line
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Center"
                                                Stroke="{DynamicResource #4C5BD4}"
                                                StrokeThickness="2"
                                                X1="0"
                                                X2="120"
                                                Y1="0"
                                                Y2="0">
                                                <Line.Style>
                                                    <Style TargetType="Line">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TypeLogin}" Value="1">
                                                                <Setter Property="Visibility" Value="Visible" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Line.Style>
                                            </Line>
                                        </StackPanel>
                                        <TextBlock VerticalAlignment="Center" Text="|" />
                                        <Border
                                            Height="50"
                                            Background="Transparent"
                                            BorderBrush="#5A68D8"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="SelectedACCLogin">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderThickness" Value="0,0,0,5" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <StackPanel Height="50">
                                                <TextBlock
                                                    x:Name="txbACCLoginTab"
                                                    Width="175"
                                                    Margin="0,0,0,0"
                                                    FontSize="16"
                                                    FontWeight="DemiBold"
                                                    Text="TÀI KHOẢN"
                                                    TextAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeLogin}" Value="0">
                                                                    <Setter Property="Foreground" Value="{DynamicResource #4C5BD4}" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <TextBlock
                                                    FontSize="16"
                                                    Text="(Email / Số ĐT)"
                                                    TextAlignment="Center" />
                                                <Line
                                                    Margin="0,5,0,0"
                                                    HorizontalAlignment="Center"
                                                    Stroke="{DynamicResource #4C5BD4}"
                                                    StrokeThickness="2"
                                                    X1="0"
                                                    X2="140"
                                                    Y1="0"
                                                    Y2="0">
                                                    <Line.Style>
                                                        <Style TargetType="Line">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding TypeLogin}" Value="0">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Line.Style>
                                                </Line>
                                            </StackPanel>
                                        </Border>
                                    </DockPanel>
                                    <Line
                                        Stroke="#EEEEEE"
                                        StrokeThickness="2"
                                        X1="0"
                                        X2="{Binding ElementName=StLogin, Path=ActualWidth}"
                                        Y1="0"
                                        Y2="0" />
                                    <StackPanel x:Name="Login_Account" Visibility="Collapsed">
                                        <StackPanel Margin="0,40,0,0">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource #474747}">
                                                <Run Text="Tài khoản đăng nhập" />
                                                <Run Foreground="{DynamicResource #FF3333}" Text="*" />
                                            </TextBlock>
                                            <Border
                                                Margin="0,5,0,0"
                                                BorderBrush="{DynamicResource #CCCCCC}"
                                                BorderThickness="0,1,1,1"
                                                CornerRadius="3">
                                                <Grid>
                                                    <Border
                                                        Width="8"
                                                        HorizontalAlignment="Left"
                                                        Background="#5A68D8"
                                                        CornerRadius="0,3,3,0" />
                                                    <DockPanel Margin="20,12" VerticalAlignment="Center">
                                                        <Grid Margin="10,0,0,0">

                                                            <TextBox
                                                                x:Name="txtEmail"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                CaretBrush="{DynamicResource #474747}"
                                                                FontSize="16"
                                                                Foreground="{DynamicResource #474747}" />
                                                            <TextBlock
                                                                Margin="1,0,0,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="{DynamicResource #666666}"
                                                                IsHitTestVisible="False"
                                                                Text="Nhập email hoặc số điện thoại">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=txtEmail, Path=Text}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </DockPanel>
                                                </Grid>
                                            </Border>
                                            <TextBlock x:Name="tblValidateEmail" Style="{StaticResource tblValidateRight}" />
                                        </StackPanel>
                                        <StackPanel Margin="0,20,0,0">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource #474747}">
                                                <Run Text="Mật khẩu" />
                                                <Run Foreground="{DynamicResource #FF3333}" Text="*" />
                                            </TextBlock>
                                            <Border
                                                Margin="0,5,0,0"
                                                BorderBrush="{DynamicResource #CCCCCC}"
                                                BorderThickness="0,1,1,1"
                                                CornerRadius="3">
                                                <Grid>
                                                    <Border
                                                        Width="8"
                                                        HorizontalAlignment="Left"
                                                        Background="#5A68D8"
                                                        CornerRadius="0,3,3,0" />

                                                    <DockPanel Margin="20,12" VerticalAlignment="Center">
                                                        <Grid Margin="10,0,0,0">
                                                            <PasswordBox
                                                                x:Name="txtPass"
                                                                Background="Transparent"
                                                                BorderThickness="0"
                                                                CaretBrush="{DynamicResource #474747}"
                                                                FontSize="16"
                                                                Foreground="{DynamicResource #474747}" />
                                                            <TextBlock
                                                                Margin="1,0,0,0"
                                                                VerticalAlignment="Center"
                                                                FontSize="16"
                                                                Foreground="{DynamicResource #666666}"
                                                                IsHitTestVisible="False"
                                                                Text="Nhập mật khẩu">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ElementName=txtPass, Path=Text}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </DockPanel>
                                                </Grid>
                                            </Border>
                                            <TextBlock x:Name="tblValidatePass" Style="{StaticResource tblValidateRight}" />
                                        </StackPanel>
                                        <Grid Margin="0,10,0,0">
                                            <Border
                                                HorizontalAlignment="Right"
                                                Background="Transparent"
                                                Cursor="Hand">
                                                <TextBlock
                                                    FontSize="16"
                                                    FontWeight="Medium"
                                                    Foreground="{DynamicResource #4C5BD4}"
                                                    Text="Quên mật khẩu ?" />
                                            </Border>
                                        </Grid>
                                        <Border
                                            Height="42"
                                            Margin="0,20,0,0"
                                            Background="{DynamicResource #4C5BD4}"
                                            CornerRadius="20"
                                            Cursor="Hand">
                                            <TextBlock
                                                Margin="0,10"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="{DynamicResource #FFFFFF}"
                                                Text="Đăng nhập" />
                                        </Border>
                                        <StackPanel
                                            Margin="0,15,0,0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal"
                                            Visibility="Hidden">
                                            <TextBlock
                                                FontSize="16"
                                                Foreground="{DynamicResource #474747}"
                                                Text="Bạn chưa có tài khoản?" />
                                            <Border Background="Transparent" Cursor="Hand">
                                                <TextBlock
                                                    Margin="5,0,0,0"
                                                    FontSize="16"
                                                    FontWeight="SemiBold"
                                                    Foreground="{DynamicResource #FFA800}"
                                                    Text="Đăng ký ngay" />
                                            </Border>
                                        </StackPanel>
                                        <DockPanel HorizontalAlignment="Center">
                                            <TextBlock
                                                Margin="10"
                                                FontSize="15"
                                                Foreground="#494949">
                                                Bạn chưa có tài khoản ?
                                            </TextBlock>
                                            <TextBlock
                                                Margin="10"
                                                FontSize="15"
                                                Foreground="#FFA800">
                                                Đăng kí ngay
                                            </TextBlock>
                                        </DockPanel>

                                    </StackPanel>
                                </StackPanel>
                                <Grid>
                                    <StackPanel x:Name="spQRCode" Visibility="Visible">
                                        <Border
                                            Width="250"
                                            Height="250"
                                            Margin="0,40,0,20">
                                            <Border.Background>
                                                <ImageBrush x:Name="QrCodeImage" />
                                            </Border.Background>

                                        </Border>
                                        <TextBlock
                                            x:Name="guide1"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Foreground="#474747"
                                            Text="Sử dụng ứng dụng Chat365 để quét mã QR"
                                            Visibility="Visible" />
                                        <TextBlock
                                            x:Name="guide2"
                                            Margin="0,20,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Background="Transparent"
                                            Cursor="Hand"
                                            FontSize="16"
                                            FontWeight="Normal"
                                            Foreground="#4c5bd4"
                                            MouseLeftButtonDown="GuideQrCode_MouseLeftButtonDown"
                                            Text="Hướng dẫn quét"
                                            Visibility="Visible" />
                                        <Border
                                            Margin="0,20,0,0"
                                            HorizontalAlignment="Center"
                                            Background="Transparent"
                                            Cursor="Hand"
                                            Visibility="Collapsed">
                                            <TextBlock
                                                FontSize="16"
                                                FontWeight="Medium"
                                                Foreground="#232F87"
                                                Text="Quên mật khẩu ?" />
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
